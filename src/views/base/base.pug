doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    block title
        title layout
    //- Search
    meta(name="title" content="layout")
    meta(name="description" content="layout")
    //- Og
    block og
        meta(name="og:title" content="layout")
        meta(name="og:description" content="layout")
        meta(name="og:image" content="layout")
        meta(name="og:url" content="https://google.com/")
        meta(name="og:type" content="https://google.com/")
    //- Css
    block styles
      link(rel="stylesheet" href="css/style.css")
    //- Favicon
    link(rel="shortcut icon" href="favicon.ico" type="image/x-icon")
    //- Scripts
    block scripts 
      script(src="js/app.js") 
  body
    block content
